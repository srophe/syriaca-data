                <person ana="#syriaca-saint">
                    <persName xml:id="name1877-2" xml:lang="en" resp="http://syriaca.org" srophe:tags="#syriaca-headword">Mary</persName>
                    <persName xml:id="name1877-3" xml:lang="fr" source="#bib1877-1">Marie</persName>
                    <persName xml:lang="en" xml:id="name1877-4" source="#bib1877-2">Mary, Slave of
                        Tertullius</persName>
                    <idno type="URI">http://syriaca.org/person/1877</idno>
                    <idno change="#change1877-1" type="deprecated">http://syriaca.org/person/3006</idno>
                    <idno type="URI">http://www.csc.org.il/db/browse.aspx?db=SB&amp;sL=S&amp;sK=St%20Mary%20the%20slave%20of%20Tertullius&amp;sT=keywords</idno>
                    <note xml:lang="en" type="abstract" resp="http://syriaca.org" corresp="http://syriaca.org/persons http://syriaca.org/q http://syriaca.org/saints">In hagiography:
                            <persName ref="http://syriaca.org/person/1877">Mary</persName> was a
                        Christian woman who lived under a pagan slave. Her owner tried to force Mary
                        to sacrifice to the gods. Mary refused and was martyred. She was
                        commemorated as a martyr in the time of the <persName>Emperor
                            Hadrian</persName>.</note>
                    <floruit>
                        <date xml:lang="en" when="0125" srophe:computed-start="0125-01-01" source="#bib1877-3">125</date>
                        <date when="0138" srophe:computed-start="0138" source="#bib1877-1">0138</date>
                    </floruit>
                    <gender ana="http://syriaca.org/taxonomy/women" source="#bib1877-1">female</gender>
                    <state type="status" ref="http://syriaca.org/taxonomy/martyrs" source="#bib1877-1">
                        <desc xml:lang="en">Martyr</desc>
                    </state>
                    <state type="status" ref="http://syriaca.org/taxonomy/saints" resp="http://syriaca.org">
                        <desc xml:lang="en">Saint</desc>
                    </state>
                    <bibl xml:id="bib1877-1">
                        <title level="m" xml:lang="la">Bibliotheca Hagiographica Syriaca</title>
                        <ptr target="http://syriaca.org/cbss/2KJEZZGS"/>
                        <citedRange unit="entry">940</citedRange>
                    </bibl>
                    <bibl xml:id="bib1877-2">
                        <title xml:lang="en">A Comprehensive Bibliography on Syriac
                            Christianity</title>
                        <ptr target="http://syriaca.org/cbss/M2B53VFA"/>
                        <citedRange unit="entry" target="http://www.csc.org.il/db/browse.aspx?db=SB&amp;sL=S&amp;sK=St%20Mary%20the%20slave%20of%20Tertullius&amp;sT=keywords">St Mary the slave of Tertullius</citedRange>
                    </bibl>
