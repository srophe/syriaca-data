          <persName xml:lang="en" xml:id="name5070-1" srophe:tags="#syriaca-headword" resp="http://syriaca.org">Conon (bishop of Tarsus)</persName>
          <persName xml:lang="syr" xml:id="name5070-2" srophe:tags="#syriaca-headword" source="#bib5070-1">ܩܢܘܢ</persName>
          <idno type="URI">http://syriaca.org/person/5070</idno>
