            <listPerson>
                <person ana="#syriaca-saint">
                    <persName xml:id="name1386-2" xml:lang="en" resp="http://syriaca.org"
                        srophe:tags="#syriaca-headword">Moses the Black</persName>
                    <persName xml:id="name1386-3" xml:lang="fr" source="#bib1386-2">Moïse
                        l’Éthiopien</persName>
                    <persName xml:id="name1386-4" xml:lang="fr-x-fiey" source="#bib1386-1">MOÏSE</persName>
                    <idno type="URI">http://syriaca.org/person/1386</idno>
                    <idno type="FIEY">319</idno>
                    <note xml:lang="en" type="abstract">In hagiography:
                        Moses the Black (or Moses the Thief) was instructed and baptized by
                            <persName>Macarius</persName>. He was a man of great physical and
                        spiritual strength who performed many miracles and overcame adversity. He
                        was killed by Bedouins who attacked his
                        <placeName>monastery</placeName>.</note>
                    <floruit>
                        <date source="#bib1386-1" when="0395" srophe:computed-start="0395">395</date>
                    </floruit>
                    <gender ana="http://syriaca.org/keyword/male" source="#bib1386-1">male</gender>
                    <state type="status" ref="http://syriaca.org/keyword/martyrs"
                        source="#bib1386-1">
                        <desc xml:lang="en">Martyr</desc>
                    </state>
                    <state type="status" ref="http://syriaca.org/keyword/saints" resp="http://syriaca.org">
                        <desc xml:lang="en">Saint</desc>
                    </state>
                    <event type="attestation" xml:id="attestation1386-1" source="#bib1386-2">
                        <desc xml:lang="en">
                            <persName ref="http://syriaca.org/person/1386">Moses the
                                Black</persName> is commemorated in <title
                                ref="http://syriaca.org/work/2044">Moses the Ethiopian
                                (text)</title>.</desc>
                    </event>
                    <bibl xml:id="bib1386-2">
                        <title level="m" xml:lang="la">Bibliotheca Hagiographica Syriaca</title>
