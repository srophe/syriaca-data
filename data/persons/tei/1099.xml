                    <persName xml:id="name1099-4" xml:lang="en">Abda ('Awda), 'Awdisho' de Kaskar</persName>
                    <persName xml:id="name1099-5" xml:lang="fr-x-zanetti" source="#bib1099-1">ʿAḇdā</persName>
