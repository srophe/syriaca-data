                        <ptr target="http://syriaca.org/bibl/5"/>
                        <citedRange unit="entry" target="http://www.csc.org.il/db/browse.aspx?db=SB&amp;sL=A&amp;sK=Anthimus%20of%20Constantinople&amp;sT=keywords">Anthimus of Constantinople</citedRange>
                    </bibl>
