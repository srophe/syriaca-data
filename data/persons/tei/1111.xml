                    <persName xml:id="name1111-2" xml:lang="en" resp="http://syriaca.org" srophe:tags="#syriaca-headword">Abraham of Beth Sayyare</persName>
                    <persName xml:id="name1111-3" xml:lang="en" resp="http://syriaca.org">Abraham the Penitent</persName>
                    <persName xml:id="name1111-4" xml:lang="fr-x-fiey" source="#bib1111-1">ABRAHAM
                        DE BÉṮ ṢAYYRĀÉ</persName>
                    <idno type="URI">http://syriaca.org/person/1111</idno>
                    <idno type="FIEY">21</idno>
                    <note xml:lang="en" type="abstract" resp="http://syriaca.org" corresp="http://syriaca.org/persons http://syriaca.org/q http://syriaca.org/saints">In hagiography:
                        Abraham the Penitent (or of <placeName ref="http://syriaca.org/place/2614">Beth Sayyare</placeName>) was a monk from the family of <persName ref="http://syriaca.org/person/356">Awgin</persName> and <persName ref="http://syriaca.org/person/320">Abraham the Great</persName>. He
                        founded a <placeName>monastery</placeName> at <placeName ref="http://syriaca.org/place/1825">Zāwīṯā</placeName>, west of <placeName>Bamarne</placeName>.</note>
                    <gender ana="http://syriaca.org/taxonomy/male" source="#bib1111-1">male</gender>
                    <state type="status" ref="http://syriaca.org/taxonomy/saints" resp="http://syriaca.org">
                        <desc xml:lang="en">Saint</desc>
                    </state>
                    <event type="veneration" source="#bib1111-1">
                        <desc xml:lang="en">The saint is venerated on the last Friday of October by <rs type="religiousCommunity" ref="http://syriaca.org/taxonomy/east-syrian-church">East Syriac Christians</rs>.</desc>
                    </event>
                    <bibl xml:id="bib1111-1">
                        <title level="m" xml:lang="fr">Saints Syriaques</title>
                        <title level="a" xml:lang="fr">ABRAHAM DE BÉṮ ṢAYYRĀÉ</title>
                        <ptr target="http://syriaca.org/cbss/RQZYRVIQ"/>
