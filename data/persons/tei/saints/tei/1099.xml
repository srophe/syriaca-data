               <persName xml:id="name1099-4" xml:lang="en">Abda ('Awda), 'Awdisho' de Kaskar</persName>
               <persName xml:id="name1099-5" xml:lang="fr-x-zanetti" source="#bibl1099-2">ʿAḇdā</persName>
               <persName xml:id="name1099-6" xml:lang="fr" source="#bibl1099-2">Abda</persName>
               <persName xml:id="name1099-7" xml:lang="fr-x-fiey" source="#bibl1099-1">ABDA ('AWDA), 'AWDİŜO'</persName>
               <idno type="URI">http://syriaca.org/person/1099</idno>
