                        <ptr target="http://syriaca.org/bibl/649"/>
                        <citedRange unit="entry">1412</citedRange>
                    </bibl>
                    <bibl xml:id="bib1531-2">
                        <title level="m" xml:lang="fr">Saints Syriaques</title>
                        <title level="a" xml:lang="fr">ʾAzīzā</title>
                        <ptr target="http://syriaca.org/bibl/650"/>
                        <citedRange unit="entry">64</citedRange>
                    </bibl>
                    <bibl xml:id="bib1531-3">
                        <title level="m" xml:lang="en">A Comprehensive Bibliography on Syriac Christianity</title>
                        <ptr target="http://syriaca.org/bibl/5"/>
                        <citedRange unit="entry" target="http://www.csc.org.il/db/browse.aspx?db=SB&amp;sL=M&amp;sK=Mar%20Azziza&amp;sT=keywords">Mar Azziza</citedRange>
