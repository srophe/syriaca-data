                <person ana="#syriaca-saint">
                    <persName xml:id="name1102-1" xml:lang="syr" srophe:tags="#syriaca-headword" source="#bib1102-1">ܥܒܕܐܠܡܣܝܚ</persName>
                    <persName xml:id="name1102-2" xml:lang="en-x-gedsh" resp="http://syriaca.org">ʿAbdelmasiḥ</persName>
                    <persName xml:id="name1102-3" xml:lang="en" resp="http://syriaca.org" srophe:tags="#syriaca-headword">ʿAbdelmasih</persName>
                    <persName xml:id="name1102-4" xml:lang="en" resp="http://syriaca.org">Abd al-Masih</persName>
