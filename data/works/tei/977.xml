                <title xml:id="name977-3" xml:lang="fr" source="#bib977-1">Martyrs Himyarites (texte)</title>
                <title xml:id="name977-4" xml:lang="en" source="#bib977-1" syriaca-tags="#syriaca-headword">The Ḥimyarite Martyrs (text)</title>
                <author source="#bib977-1" ref="http://syriaca.org/person/53">
                    <persName xml:lang="en-x-gedsh">
                        <forename sort="1">Shemʿun</forename>
                        <addName type="family" sort="2">of <placeName ref="http://syriaca.org/place/305">Beth Arsham</placeName>
                        </addName>
                    </persName> — <persName xml:lang="syr">
