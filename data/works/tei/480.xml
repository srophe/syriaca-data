                        <citedRange unit="vol">7</citedRange>
                        <citedRange>p. 217-218</citedRange>
                    </bibl>
                </note>
                <note xml:lang="en" type="editions">
                    <bibl source="#bib480-1" corresp="#bib480-4 bib480-5" n="2" xml:id="bib480-3">
