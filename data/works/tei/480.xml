                        <citedRange unit="vol">2</citedRange>
                        <citedRange>p. 264-265</citedRange>
                    </bibl>
                </note>
                <note xml:lang="en" type="MSS" source="#bib480-1">
                    <bibl xml:id="bib480-4">ms Lady Meux 6 (?)</bibl>
                </note>
