                <title xml:id="name288-3" xml:lang="fr" source="#bib288-1">Qardag (texte)</title>
                <title xml:id="name288-4" xml:lang="en" source="#bib288-1" syriaca-tags="#syriaca-headword">Qardagh (text)</title>
                <idno type="URI">http://syriaca.org/work/288</idno>
