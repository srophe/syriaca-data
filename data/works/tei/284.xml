                <title xml:id="name284-2" xml:lang="fr-x-bhs" source="#bib284-1">Badmā</title>
                <title xml:id="name284-3" xml:lang="fr" source="#bib284-1">Badma (texte)</title>
                <title xml:id="name284-4" xml:lang="en" source="#bib284-1" syriaca-tags="#syriaca-headword">Badma (text)</title>
                <idno type="URI">http://syriaca.org/work/284</idno>
