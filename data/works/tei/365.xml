            <title xml:id="name365-2" xml:lang="fr-x-bhsyre" source="#bib365-1">Pawlōs</title>
            <title xml:id="name365-3" xml:lang="fr" source="#bib365-1">De Paul l’ermite</title>
            <title xml:id="name365-4"
                   xml:lang="en"
