                <title xml:id="name287-3" xml:lang="fr" source="#bib287-1">Qardag (texte)</title>
                <title xml:id="name287-4" xml:lang="en" source="#bib287-1" syriaca-tags="#syriaca-headword">Qardagh (text)</title>
                <idno type="URI">http://syriaca.org/work/287</idno>
