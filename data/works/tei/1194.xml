                <title xml:id="name1194-3" xml:lang="fr" source="#bib1194-1">Georges (texte)</title>
                <title xml:id="name1194-4" xml:lang="en" source="#bib1194-1" syriaca-tags="#syriaca-headword">George (text)</title>
                <author xml:lang="fr" source="#bib1194-1" ref="http://syriaca.org/person/504">
                    <persName xml:lang="en-x-gedsh">
                        <forename sort="1">Gewargis</forename>
