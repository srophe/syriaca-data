                    <placeName xml:id="name511-3" xml:lang="syr-Syrj" source="#bib511-1">ܢܨܝܒܝܢ ܕܪ̈ܘܡܳܝܐ</placeName>
                    <placeName xml:id="name511-4" xml:lang="ar" source="#bib511-2 #bib511-5">نصيبين الروم</placeName>
                    <placeName xml:id="name511-5" xml:lang="en" source="#bib511-3">Byzantine Nisibin</placeName>
                    <placeName resp="http://syriaca.org" xml:id="name511-6" xml:lang="en-x-srp1" srophe:tags="#syriaca-simplified-script">Aintab</placeName>
                    <placeName resp="http://syriaca.org" xml:id="name511-7" xml:lang="en-x-srp1" srophe:tags="#syriaca-simplified-script">‘Aintab</placeName>
                    <desc type="abstract" xml:id="abstract511-1" xml:lang="en">A town west of the <placeName ref="http://syriaca.org/place/82">Euphrates</placeName> between <placeName ref="http://syriaca.org/place/222">ʿAintab</placeName> and <placeName ref="http://syriaca.org/place/50">Birtha</placeName>.</desc>
                    <desc xml:lang="ar">
                        <quote source="#bib511-2">ونصيبين ايضا قرية على شاطئ الفرات غربي بيرهجك كانت تعرف بنصيبين الروم.</quote>
                    </desc>
                    <desc xml:lang="en">
                        <quote source="#bib511-3">Nisibin is also the name of a village on the west bank of the Euphrates, west of Biricik, formerly known as the Byzantine Nisibin.</quote>
                    </desc>
                    <location type="gps" source="#bib511-4">
                        <geo>37.009788 37.788277</geo>
                    </location>
                    <event type="attestation" xml:id="attestation511-1" notBefore="1224" notAfter="1228" source="#bib511-5" srophe:computed-start="1224-01-01" srophe:computed-end="1228-01-01">
                        <p xml:lang="en">Attestation of name <foreign xml:lang="ar">نصيبين الروم</foreign> in the <title xml:lang="en" level="m">Muʿjam al-buldān</title> of <persName>Yāqūt al-Ḥamawī</persName>.</p>
                        <link target="#name511-4 #attestation511-1"/>
                    </event>
