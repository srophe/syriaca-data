            <listPlace>
                <place xml:id="place-2475" type="monastery">
                    <placeName resp="http://syriaca.org" xml:id="name2475-1" xml:lang="en" syriaca-tags="#syriaca-headword">Mar Nuḥ</placeName>
                    <placeName xml:id="name2475-2" xml:lang="en" source="#bib2475-1">Mār Nūḥ</placeName>
                    <placeName xml:id="name2475-3" xml:lang="en" source="#bib2475-1">Monastery of the Ark</placeName>
                    <placeName xml:id="name2475-4" xml:lang="ar" source="#bib2475-2">دير ابون</placeName>
                    <desc xml:id="abstract-en-2475" xml:lang="en">A monastery east of <placeName ref="http://syriaca.org/place/1141">Dairek</placeName> on <placeName ref="http://syriaca.org/place/637">Mount Qardu</placeName>, near the traditional site for the landing of Noah's Ark.</desc>
                    <location type="nested" source="#bib2475-1">
                        <region ref="http://syriaca.org/place/770">Qaimar district</region>
                        <region ref="http://syriaca.org/place/712">Gāzartā region</region>
                    </location>
                    <location type="relative" subtype="quote" source="#bib2475-1">
                        <offset>on the slopes of</offset>
                        <placeName ref="http://syriaca.org/place/637">Jabal Jūdi,</placeName>
                        <measure>a few miles</measure>
                        <offset>east of</offset>
                        <placeName ref="http://syriaca.org/place/1141">the village of Dairek</placeName>
                    </location>
                    <event type="attestation" xml:id="attestation2475-1" notBefore="1224" notAfter="1228" source="#bib2475-2" syriaca-computed-start="1224-01-01" syriaca-computed-end="1228-01-01">
                        <p xml:lang="en">Attestation of name <foreign xml:lang="ar">دير ابون</foreign> in the <title xml:lang="en" level="m">Muʿjam al-buldān</title> of <persName>Yāqūt al-Ḥamawī</persName>.</p>
                        <link target="#name2475-4 #attestation2475-1"/>
                    </event>
                    <state type="existence"/>
                    <idno type="URI">http://syriaca.org/place/2475</idno>
                    <bibl xml:id="bib2475-1">
                        <author>David Wilmshurst</author>
                        <title xml:lang="en">The Ecclesiastical Organisation of the Church of the East, 1318-1913</title>
                        <citedRange unit="pp">110, 111</citedRange>
                        <ptr target="http://syriaca.org/bibl/9"/>
                    </bibl>
                    <bibl xml:id="bib2475-2">
                        <title xml:lang="en" level="m">Muʿjam al-buldān</title>
                        <author>Yāqūt al-Ḥamawī</author>
                        <ptr target="http://syriaca.org/bibl/636"/>
                        <citedRange unit="pp">II:564</citedRange>
                    </bibl>
                </place>
