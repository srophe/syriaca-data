                <rubric xml:lang="syr">ܛܟ̣ܣܐ ܕܥܠ ܣܘܦܪܐ ܕܕܝܪ̈ܝܬܐ</rubric>
                
                
                
                
                
              </msItem>
              <msItem xml:id="b24" n="27" defective="true">
