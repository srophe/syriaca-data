                        <persName ref="http://syriaca.org/person/2274"/>
                        <occupation ana="http://syriaca.org/keyword/bishops">
                            <note type="desc"><persName ref="http://syriaca.org/person/2274"
                                    >Ephraim</persName>was patriarch of<placeName
                                    ref="http://syriaca.org/place/10">Antioch</placeName></note>
                        </occupation>
                    </person>
                </listPerson>
                <bibl type="primary">
