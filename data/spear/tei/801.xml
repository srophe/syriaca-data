            <ab type="factoid" subtype="sanctity" xml:id="factoid-14" resp="#dschwartz">
                <idno type="URI">http://syriaca.org/spear/801-14</idno>
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/1866"/>
                        <state type="sanctity" ana="http://syriaca.org/keyword/saints">
                            <note type="desc"><persName ref="http://syriaca.org/person/1866">Mare</persName>
                                was a saint.
                            </note>
                        </state>
                    </person>
                </listPerson>
                <bibl type="primary"><ptr target="http://syriaca.org/work/801"/><citedRange unit="p">135</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">135</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="occupation" xml:id="factoid-2" resp="#jmcmanaway #avawter">
                <idno type="URI">http://syriaca.org/spear/801-2</idno>
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/1866"/>
                        <occupation ana="http://syriaca.org/keyword/clergy"><note type="desc"><persName ref="http://syriaca.org/person/1866">Mare</persName>
                                was a clergyman. </note></occupation>
                    </person>
                </listPerson>
                <bibl type="primary"><ptr target="http://syriaca.org/work/801"/><citedRange unit="p">135</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">135</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="residence" xml:id="factoid-3" resp="#jmcmanaway #avawter">
                <idno type="URI">http://syriaca.org/spear/801-3</idno>
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/1866"/>
                        <residence><placeName ref="http://syriaca.org/place/2794"/><note type="desc"><persName ref="http://syriaca.org/person/1866">Mare</persName>
                                resided in <placeName ref="http://syriaca.org/place/2794">Hula</placeName> in the district of <placeName ref="http://syriaca.org/place/2758"> Anzetene </placeName>.
                            </note></residence>
                    </person>
                </listPerson>
                <bibl type="primary"><ptr target="http://syriaca.org/work/801"/><citedRange unit="p">135</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">135</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="occupation" xml:id="factoid-4" resp="#jmcmanaway #avawter">
                <idno type="URI">http://syriaca.org/spear/801-4</idno>
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/1866"/>
                        <occupation ana="http://syriaca.org/keyword/monks http://syriaca.org/keyword/rhetors"><note type="desc"><persName ref="http://syriaca.org/person/1866">Mare</persName> was a monastic, a speaker, teacher, and very
                                well informed on every subject. </note></occupation>
                    </person>
                </listPerson>
                <bibl type="primary"><ptr target="http://syriaca.org/work/801"/><citedRange unit="p">135</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">135</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="residence" xml:id="factoid-5" resp="#jmcmanaway #avawter">
                <idno type="URI">http://syriaca.org/spear/801-5</idno>
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/1866"/>
                        <residence><placeName ref="http://syriaca.org/place/2794"/><note type="desc"><persName ref="http://syriaca.org/person/1866">Mare</persName>
                                withdrew to a remote place three miles outside <placeName ref="http://syriaca.org/place/2794"> Hula </placeName>.
                            </note></residence>
                    </person>
                </listPerson>
                <bibl type="primary"><ptr target="http://syriaca.org/work/801"/><citedRange unit="p">135</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">135</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-6" resp="#jmcmanaway #avawter">
                <idno type="URI">http://syriaca.org/spear/801-6</idno>
                <listEvent>
                    <event ana="http://syriaca.org/keyword/fasting http://syriaca.org/keyword/food">
                        <desc><persName ref="http://syriaca.org/person/1866">Mare</persName> fasted from
                            bread, wine, oil, cheese, and fish. He limited himself to pulse, herbs,
                            and water. </desc>
                    </event>
                </listEvent>
                <bibl type="primary"><ptr target="http://syriaca.org/work/801"/><citedRange unit="p">135</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">135</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-7" resp="#jmcmanaway #avawter">
                <idno type="URI">http://syriaca.org/spear/801-7</idno>
                <listEvent>
                    <event ana="http://syriaca.org/keyword/imprisonment">
                        <desc><persName ref="http://syriaca.org/person/1866">Mare</persName> was
                            arrested and imprisoned. </desc>
                    </event>
                </listEvent>
                <bibl type="primary"><ptr target="http://syriaca.org/work/801"/><citedRange unit="p">136</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">136</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-8" resp="#jmcmanaway #avawter">
                <idno type="URI">http://syriaca.org/spear/801-8</idno>
                <listEvent>
                    <event ana="http://syriaca.org/keyword/persecution">
                        <desc><persName ref="http://syriaca.org/person/3651">Satan </persName> stirred up
                            persecution against <persName ref="http://syriaca.org/person/1866"> Mare
                            </persName>. </desc>
                    </event>
                </listEvent>
                <bibl type="primary"><ptr target="http://syriaca.org/work/801"/><citedRange unit="p">136</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">136</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-9" resp="#jmcmanaway #avawter">
                <idno type="URI">http://syriaca.org/spear/801-9</idno>
                <listEvent>
                    <event ana="http://syriaca.org/keyword/monasteries http://syriaca.org/keyword/artisans http://syriaca.org/keyword/architecture">
                        <desc><persName ref="http://syriaca.org/person/1866">Mare</persName> built a
                            monastery. </desc>
                    </event>
                </listEvent>
                <bibl type="primary"><ptr target="http://syriaca.org/work/801"/><citedRange unit="p">136</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">136</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="occupation" xml:id="factoid-10" resp="#jmcmanaway #avawter">
                <idno type="URI">http://syriaca.org/spear/801-10</idno>
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/1866"/>
                        <occupation ana="http://syriaca.org/keyword/artisans"><note type="desc"><persName ref="http://syriaca.org/person/1866">Mare</persName>
                                was a craftsman. </note></occupation>
                    </person>
                </listPerson>
                <bibl type="primary"><ptr target="http://syriaca.org/work/801"/><citedRange unit="p">136</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">136</citedRange></bibl>
            </ab>
            <ab type="factoid" subtype="mentalState" xml:id="factoid-11" resp="#jmcmanaway #avawter">
                <idno type="URI">http://syriaca.org/spear/801-11</idno>
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/1866"/>
                        <state type="mental" ana="http://syriaca.org/keyword/pride">
                            <note type="desc"><persName ref="http://syriaca.org/person/1866">Mare</persName> used to behave with great and measureless
                                arrogance and he was haughty. </note>
                        </state>
                    </person>
                </listPerson>
                <bibl type="primary"><ptr target="http://syriaca.org/work/801"/><citedRange unit="p">135</citedRange></bibl>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="p">135</citedRange></bibl>
            </ab>
