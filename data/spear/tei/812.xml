            <div type="factoid" subtype="event" xml:id="factoid-1"
                resp="#jnsaint-laurent #tbaillargeon #tmcneir #syoung #rtrupiano #dschwartz">
                <idno type="URI">http://syriaca.org/spear/812-1</idno>
                <listEvent>
                    <event
                        ana="http://syriaca.org/keyword/prayer http://syriaca.org/keyword/spiritual-or-ascetic-disciplines">
                        <desc>
                            <persName ref="http://syriaca.org/person/3762">Anonymous 3762</persName> engaged in earnest prayer and 
                            physically strenuous acts of asceticism.
                        </desc>
                    </event>
                </listEvent>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/812"/>
                    <citedRange unit="p">274</citedRange>
                </bibl>
                <bibl type="primary">
