                    <person>
                        <persName ref="http://syriaca.org/person/3762"/>
                        <occupation ana="http://syriaca.org/keyword/monks">
                            <note type="desc">
                                <persName ref="http://syriaca.org/person/3762">Anonymous 3762</persName>
                                was a monk
                            </note>
                        </occupation>
                    </person>
                </listPerson>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/812"/>
                    <citedRange unit="p">274</citedRange>
