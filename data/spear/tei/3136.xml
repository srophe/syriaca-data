                    <relation type="person"
                        ref="http://syriaca.org/keyword/intimate-relationship-with"
                        mutual="http://syriaca.org/person/2558 http://syriaca.org/person/51">
                        <desc><persName ref="http://syriaca.org/person/2558">Misael</persName> and
                                <persName ref="http://syriaca.org/person/51">Severus of
                                Antioch</persName> had an intimate relationship.</desc>
                    </relation>
                </listRelation>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/669"/>
                    <citedRange unit="part">3.03</citedRange>
