                <listPerson>
                    <personGrp>
                        <persName ref="http://syriaca.org/person/3074"/>
                        <occupation ref="http://syriaca.org/keyword/clergy">
                            <note type="desc"><persName ref="http://syriaca.org/person/3074">Anonymi 3074</persName> were clergy in a monastery.</note>
                        </occupation>
                    </personGrp>
                </listPerson>
