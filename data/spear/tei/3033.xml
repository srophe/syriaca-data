                    <person>
                        <persName ref="http://syriaca.org/person/2531"/>
                        <occupation ana="http://syriaca.org/keyword/dukes">
                            <note type="desc"><persName ref="http://syriaca.org/person/2531"
                                    >Timostratus</persName> was a duke.</note>
                        </occupation>
                    </person>
                </listPerson>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/668"/>
                    <citedRange unit="part">1.08</citedRange>
