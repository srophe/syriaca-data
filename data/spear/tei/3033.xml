                    <relation type="person" ref="http://syriaca.org/keyword/sender-of-letter-to"
                        active="http://syriaca.org/person/2531"
                        passive="http://syriaca.org/person/51">
                        <desc><persName ref="http://syriaca.org/person/2531">Timostratus</persName>
                            sent a letter to <persName ref="http://syriaca.org/person/51">Severus of
                                Antioch</persName>.</desc>
                    </relation>
                </listRelation>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/668"/>
                    <citedRange unit="part">1.08</citedRange>
                    <citedRange unit="p">41</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="relation" xml:id="factoid-5" resp="#ktorabi #dschwartz">
