                    <person>
                        <persName ref="http://syriaca.org/person/2531"><!-- Since Timostratus is a duke, should we add a social rank div?  -->
                            Timostratus, the Duke </persName>
                    </person>
                </listPerson>
                <bibl type="primary"><ptr target="http://syriaca.org/bibl/668"/><citedRange unit="part">1.08</citedRange><citedRange unit="pp">41</citedRange></bibl>
