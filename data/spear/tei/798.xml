                <idno type="URI">http://syriaca.org/spear/798-7</idno>
                <listEvent>
                    <event ana="http://syriaca.org/keyword/holy-places http://syriaca.org/keyword/altars">
                        <desc><persName ref="http://syriaca.org/person/1980">Paul</persName> made an
                            altar and a chapel in his cave. </desc>
                    </event>
                </listEvent>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/798"/>
                    <citedRange unit="p">117</citedRange>
                </bibl>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/bibl/1409"/>
                    <citedRange unit="p">117</citedRange>
                </bibl>
            </ab>
            <ab type="factoid" subtype="event" xml:id="factoid-8" resp="#jwalters">
                <idno type="URI">http://syriaca.org/spear/798-8</idno>
                <listEvent>
                    <event ana="http://syriaca.org/keyword/monasteries">
                        <desc> A monastery was built at the site of <persName ref="http://syriaca.org/person/1980">Paul's</persName> cave. </desc>
                    </event>
                </listEvent>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/798"/>
