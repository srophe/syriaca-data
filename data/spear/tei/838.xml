               <relation type="person" ref="http://syriaca.org/keyword/commemorates" active="http://syriaca.org/person/http://syriaca.org/person/74" passive="http://syriaca.org/person/3771">
                  <desc>
                     <persName ref="http://syriaca.org/person/74">John of Ephesus</persName> 
                     commemmorated
                     <persName ref="http://syriaca.org/person/3771">Anonymi 3771</persName>
