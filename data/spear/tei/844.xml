            <div type="factoid" subtype="nameVariant" xml:id="factoid-2" resp="#dschwartz">
                <idno type="URI">http://syriaca.org/spear/844-2</idno>
                <listPerson>
                    <person>
                        <persName ref="http://syriaca.org/person/3720">A certain gentleman</persName>
                    </person>
                </listPerson>
                <bibl type="primary">
                    <ptr target="http://syriaca.org/work/844"/>
                    <citedRange unit="p">526</citedRange>
                </bibl>
                <bibl type="primary">
